{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "tauri-calendar",
	"version": "2.0.0",
	"identifier": "com.tauri-calendar.dev",
	"build": {
		"devUrl": "http://localhost:5173",
		"frontendDist": "../build",
		"beforeDevCommand": "bun dev",
		"beforeBuildCommand": "bun run build"
	},
	"app": {
		"windows": [
			{
				"title": "tauri-calendar",
				"width": 473,
				"height": 425,
				"maxWidth": 473,
				"maxHeight": 425,
				"minWidth": 473,
				"minHeight": 425,
				"decorations": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}